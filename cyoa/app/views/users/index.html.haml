- if @errors
  .errors= @errors

%h1 Leaderboard
- if @users && @users.any?
  - @users.each_with_index do |user, i|
    %p= "#{user.username} #{@hi_score_games[i].score}"


- if logged_in?
  %p WELCOME #{current_user.username}. TRY NOT TO SUCK TODAY
  - if @game_in_progress
    = button_to "RESUME THE THUNDERDORM", "/rounds/show", method: :get
  - else
    = button_to "ENTER THE RON THUNDERDORM", games_path
  = button_to("Logout", "/logout", {method: :delete})


- else
  = form_for :user, url: "/login" do |f|
    = f.text_field :username, placeholder: "Username"
    = f.password_field :password, placeholder: "Password"
    = f.submit value: "Login!"

  = form_for :user, url: users_path do |f|
    = f.text_field :username, placeholder: "Username"
    = f.password_field :password, placeholder: "Password"
    = f.submit value: "Create Account!"
 